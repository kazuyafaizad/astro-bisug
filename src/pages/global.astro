      map.config.mapBgColor = "#B8A273";
      map.config.activePointColor = '#333';
      map.config.mapActiveBgColor ='#B8A273';
      // Add event points

     map.addEvents([{
        name: 'Singapore',
        coordinate: [103.8198, 1.3521 ]
    }, {
        name: 'Japan',
        coordinate: [130.4017, 33.5902 ]
    },{
        name: 'USA',
        coordinate: [77.0369, 38.9072 ]
    },{
        name: 'China',
        coordinate: [116.4074, 39.9042 ]
    }]);

      // regiest events
      map.on('mousemove', function(e, data) {
        console.log(data);
      })
    </script>
